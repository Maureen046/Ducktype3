<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/level4"
    android:orientation="vertical"
    tools:context=".Level3.LevelThreeContainerActivity"
    android:id="@+id/ParentView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/level3Title"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mostly_mono"
            android:paddingTop="30dp"
            android:text="@string/hard"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            tools:ignore="RtlCompat" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/level4"
        android:clickable="true"
        android:focusable="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="286dp"
            android:paddingTop="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/LevelThreeQuestionText"
                    android:layout_width="match_parent"
                    android:layout_height="282dp"
                    android:layout_gravity="top"
                    android:fontFamily="@font/mostly_mono"
                    android:paddingLeft="10dp"
                    android:paddingTop="50dp"
                    android:paddingRight="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:visibility="visible" />
            </LinearLayout>

            <ImageView
                android:id="@+id/LevelThreeImageCodeLanding"
                android:layout_width="368dp"
                android:layout_height="match_parent"
                android:layout_gravity="center" />
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/ChoicesButtons"
            android:layout_width="match_parent"
            android:layout_height="273dp"
            android:layout_alignParentBottom="true">

            <ImageButton
                android:id="@+id/lvl3Frag3_choice1"
                android:layout_width="150dp"
                android:layout_height="79dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="149dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/choices_button_pressed" />

            <ImageButton
                android:id="@+id/lvl3Frag3_choice2"
                android:layout_width="150dp"
                android:layout_height="79dp"
                android:layout_alignTop="@+id/lvl3Frag3_choice1"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="24dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/choices_button_pressed" />

            <ImageButton
                android:id="@+id/lvl3Frag3_choice3"
                android:layout_width="150dp"
                android:layout_height="79dp"
                android:layout_alignStart="@+id/lvl3Frag3_choice1"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="41dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/choices_button_pressed" />

            <ImageButton
                android:id="@+id/lvl3Frag3_choice4"
                android:layout_width="150dp"
                android:layout_height="79dp"
                android:layout_alignStart="@+id/lvl3Frag3_choice2"
                android:layout_alignTop="@+id/lvl3Frag3_choice3"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/choices_button_pressed" />

            <TextView
                android:id="@+id/LevelThreeFirstChoiceText"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/lvl3Frag3_choice1"
                android:layout_alignEnd="@+id/lvl3Frag3_choice1"
                android:layout_alignBottom="@+id/lvl3Frag3_choice1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="13dp"
                android:clickable="false"
                android:fontFamily="@font/mostly_mono"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/colorText" />

            <TextView
                android:id="@+id/LevelThreeSecondChoiceText"
                android:layout_width="123dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/lvl3Frag3_choice2"
                android:layout_alignTop="@+id/lvl3Frag3_choice2"
                android:layout_alignEnd="@+id/lvl3Frag3_choice2"
                android:layout_alignBottom="@+id/lvl3Frag3_choice2"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="12dp"
                android:clickable="false"
                android:focusable="false"
                android:fontFamily="@font/mostly_mono"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/colorText" />

            <TextView
                android:id="@+id/LevelThreeThirdChoiceText"
                android:layout_width="129dp"
                android:layout_height="44dp"
                android:layout_alignStart="@+id/lvl3Frag3_choice3"
                android:layout_alignTop="@+id/lvl3Frag3_choice3"
                android:layout_alignEnd="@+id/lvl3Frag3_choice3"
                android:layout_alignBottom="@+id/lvl3Frag3_choice3"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="11dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="11dp"
                android:clickable="false"
                android:focusable="false"
                android:fontFamily="@font/mostly_mono"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/colorText" />

            <TextView
                android:id="@+id/LevelThreeLastChoiceText"
                android:layout_width="129dp"
                android:layout_height="44dp"
                android:layout_alignStart="@+id/lvl3Frag3_choice4"
                android:layout_alignTop="@+id/lvl3Frag3_choice4"
                android:layout_alignEnd="@+id/lvl3Frag3_choice4"
                android:layout_alignBottom="@+id/lvl3Frag3_choice4"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="13dp"
                android:clickable="false"
                android:focusable="false"
                android:fontFamily="@font/mostly_mono"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/colorText" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/LevelThreeCodeAnswerLanding"
            android:layout_width="match_parent"
            android:layout_height="251dp"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="255dp"
                android:layout_gravity="bottom"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="76dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/ANSWER_HERE_EDITTEXT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:fontFamily="@font/mostly_mono"
                        android:hint="Type Your Answer Here"
                        android:inputType="text"
                        android:textColor="@color/white"
                        android:textSize="28sp" />

                    <ImageButton
                        android:id="@+id/SUBMIT_HERE_BUTTON"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/submit_button_pressed" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mostly_mono"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="There is a missing part of the code that is supposed to be right where the blank is. What is it?"
                    android:textAlignment="center"
                    android:textSize="18sp" />

            </LinearLayout>

        </FrameLayout>

    </RelativeLayout>

</LinearLayout>