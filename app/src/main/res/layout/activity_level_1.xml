<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".level_1">

    <TextView
        android:id="@+id/level1-def"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/basics"
        android:fontFamily="@font/mostly_mono"
        android:text="@string/basics"
        android:textAlignment="center"
        android:textColor="@color/colorText"
        android:textSize="80sp"
        android:visibility="visible"
        tools:text="@string/basics" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="32dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:background="@null"
        android:contentDescription="@string/begin"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/begin_button"
        android:onClick="go2level1quiz"
        tools:ignore="OnClick" />
</LinearLayout>