<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".level_1_quiz"
    android:background="@color/level1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/levelTitle"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mostly_mono"
            android:paddingTop="10dp"
            android:text="@string/easy"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:textSize="30sp"
            tools:ignore="RtlCompat" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lvl1Frag1-textview"
            android:layout_width="291dp"
            android:layout_height="125dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="132dp"
            android:fontFamily="@font/mostly_mono"
            android:text="@string/question"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:textSize="36sp" />

        <ImageButton
            android:id="@+id/lvl1Frag1_choice1"
            android:layout_width="150dp"
            android:layout_height="79dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="221dp"
            android:layout_marginStart="40dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/choices_button_pressed" />

        <ImageButton
            android:id="@+id/lvl1Frag1_choice2"
            android:layout_width="150dp"
            android:layout_height="79dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/lvl1Frag1_choice1"
            android:layout_marginEnd="32dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/choices_button_pressed" />

        <ImageButton
            android:id="@+id/lvl1Frag1_choice3"
            android:layout_width="150dp"
            android:layout_height="79dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/lvl1Frag1_choice1"
            android:layout_marginBottom="113dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/choices_button_pressed" />

        <ImageButton
            android:id="@+id/lvl1Frag1_choice4"
            android:layout_width="150dp"
            android:layout_height="79dp"
            android:layout_alignStart="@+id/lvl1Frag1_choice2"
            android:layout_alignTop="@+id/lvl1Frag1_choice3"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/choices_button_pressed" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="246dp"
            android:layout_marginStart="49dp"
            android:fontFamily="@font/mostly_mono"
            android:text="Hypertext Markup Language"
            android:textAlignment="center"
            android:textColor="@color/colorText" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView7"
            android:layout_marginEnd="51dp"
            android:fontFamily="@font/mostly_mono"
            android:text="Hellotext Markup Language"
            android:textAlignment="center"
            android:textColor="@color/colorText" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView7"
            android:layout_marginBottom="139dp"
            android:fontFamily="@font/mostly_mono"
            android:text="Hypertalented Makeup Language"
            android:textAlignment="center"
            android:textColor="@color/colorText" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView8"
            android:layout_alignTop="@+id/textView9"
            android:fontFamily="@font/mostly_mono"
            android:text="Hypertext Markup Lollipop"
            android:textAlignment="center"
            android:textColor="@color/colorText" />

    </RelativeLayout>

</LinearLayout>