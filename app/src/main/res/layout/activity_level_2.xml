<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:gravity="center"
    tools:context=".level_2">

    <TextView
        android:id="@+id/level2-def"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/formatting"
        android:fontFamily="@font/mostly_mono"
        android:text="@string/formatting"
        android:textAlignment="center"
        android:textColor="@color/colorText"
        android:textSize="65sp"
        tools:text="@string/formatting" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="32dp" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:background="@null"
        android:contentDescription="@string/begin"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/begin_button" />
</LinearLayout>