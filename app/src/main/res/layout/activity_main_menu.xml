<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".MainMenuActivity">

    <ImageView
        android:id="@+id/main_bg_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:contentDescription="@string/logo_gif"
        android:visibility="visible"
        app:srcCompat="@drawable/main_screen"
        android:focusable="true"
        android:onClick="playSound"/>

    <ImageButton
        android:id="@+id/main_play_button"
        android:layout_width="147dp"
        android:layout_height="142dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        android:background="@null"
        android:contentDescription="@string/play_button"
        android:onClick="go2level_screen"
        android:scaleType="fitXY"
        android:visibility="visible"
        app:srcCompat="@drawable/main_screen_play_button"
        tools:ignore="OnClick" />

    <FrameLayout
        android:id="@+id/landing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:visibility="visible">

    </FrameLayout>


</RelativeLayout>