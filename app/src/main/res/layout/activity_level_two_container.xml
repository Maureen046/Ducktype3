<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/level2"
    tools:context=".Level2.LevelTwoContainerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/level2Title"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mostly_mono"
            android:paddingTop="30dp"
            android:text="@string/medium"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:textSize="30sp"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/level2"
        android:clickable="true"
        android:focusable="true">

        <FrameLayout
            android:id="@+id/LevelTwoImageLanding"
            android:layout_width="match_parent"
            android:layout_height="229dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/LevelTwoQuestionText"
                    android:layout_width="match_parent"
                    android:layout_height="282dp"
                    android:layout_gravity="top"
                    android:fontFamily="@font/mostly_mono"
                    android:paddingLeft="10dp"
                    android:paddingTop="50dp"
                    android:paddingRight="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorText"
                    android:textSize="30sp"
                    android:visibility="visible" />
            </LinearLayout>
        </FrameLayout>


        <ImageButton
            android:id="@+id/lvl2Frag2_choice1"
            android:layout_width="150dp"
            android:layout_height="79dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="41dp"
            android:layout_marginBottom="149dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/choices_button_pressed" />

        <ImageButton
            android:id="@+id/lvl2Frag2_choice2"
            android:layout_width="150dp"
            android:layout_height="79dp"
            android:layout_alignTop="@+id/lvl2Frag2_choice1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="31dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/choices_button_pressed" />

        <ImageButton
            android:id="@+id/lvl2Frag2_choice3"
            android:layout_width="150dp"
            android:layout_height="79dp"
            android:layout_alignStart="@+id/lvl2Frag2_choice1"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="41dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/choices_button_pressed" />

        <ImageButton
            android:id="@+id/lvl2Frag2_choice4"
            android:layout_width="150dp"
            android:layout_height="79dp"
            android:layout_alignStart="@+id/lvl2Frag2_choice2"
            android:layout_alignTop="@+id/lvl2Frag2_choice3"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/choices_button_pressed" />

        <TextView
            android:id="@+id/LevelTwoFirstChoiceText"
            android:layout_width="132dp"
            android:layout_height="33dp"
            android:layout_alignTop="@+id/lvl2Frag2_choice1"
            android:layout_alignEnd="@+id/lvl2Frag2_choice1"
            android:layout_alignBottom="@+id/lvl2Frag2_choice1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/mostly_mono"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/colorText" />

        <TextView
            android:id="@+id/LevelTwoSecondChoiceText"
            android:layout_width="132dp"
            android:layout_height="33dp"
            android:layout_alignStart="@+id/lvl2Frag2_choice2"
            android:layout_alignTop="@+id/lvl2Frag2_choice2"
            android:layout_alignEnd="@+id/lvl2Frag2_choice2"
            android:layout_alignBottom="@+id/lvl2Frag2_choice2"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="21dp"
            android:fontFamily="@font/mostly_mono"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/colorText" />

        <TextView
            android:id="@+id/LevelTwoThirdChoiceText"
            android:layout_width="129dp"
            android:layout_height="33dp"
            android:layout_alignStart="@+id/lvl2Frag2_choice3"
            android:layout_alignTop="@+id/lvl2Frag2_choice3"
            android:layout_alignEnd="@+id/lvl2Frag2_choice3"
            android:layout_alignBottom="@+id/lvl2Frag2_choice3"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/mostly_mono"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/colorText" />

        <TextView
            android:id="@+id/LevelTwoLastChoiceText"
            android:layout_width="132dp"
            android:layout_height="33dp"
            android:layout_alignStart="@+id/lvl2Frag2_choice4"
            android:layout_alignTop="@+id/lvl2Frag2_choice4"
            android:layout_alignEnd="@+id/lvl2Frag2_choice4"
            android:layout_alignBottom="@+id/lvl2Frag2_choice4"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="17dp"
            android:fontFamily="@font/mostly_mono"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/colorText" />


    </RelativeLayout>

</LinearLayout>