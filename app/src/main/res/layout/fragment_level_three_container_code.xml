<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/level4"
    android:clickable="true"
    android:focusable="true"
    tools:context=".Level3.LevelThreeContainerCodeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:layout_gravity="bottom"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ANSWER_HERE_EDITTEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/mostly_mono"
                android:hint="Type Your Answer Here"
                android:inputType="text"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <ImageButton
                android:id="@+id/SUBMIT_HERE_BUTTON"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/submit_button_pressed" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mostly_mono"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="There is a missing part of the code that is supposed to be right where the blank is. What is it?"
            android:textAlignment="center"
            android:textSize="18sp" />

    </LinearLayout>
</FrameLayout>